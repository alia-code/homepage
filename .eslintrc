{
  "parser": "babel-eslint",
  "extends": [
    "standard",
    "eslint:recommended",
    "airbnb"
  ],
  "plugins": ["standard", "import", "promise", "react", "jsx-a11y"],
  "settings": { "import/resolver": { "node": { "paths": ["./src"] } } },
  "env": {
    "es6": true,
    "browser": true,
    "node": true
  },
  "parserOptions": {
    "ecmaVersion": 8,
    "sourceType": "module",
    "ecmaFeatures": {
      "jsx": true,
      "modules": true
    }
  },
  "globals": {
    "window": false,
    "document": false,
    "fetch": false
  }
}
